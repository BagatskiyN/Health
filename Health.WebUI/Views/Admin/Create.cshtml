@using System.Web.Optimization

@model Health.WebUI.Models.CreateDoctorViewModel
@{
    ViewBag.Title = "Создание пользователя";
    Layout = null;
}

<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Имя</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <la0bel>Отчество</la0bel>
        @Html.TextBoxFor(x => x.Patronymic, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Фамилия</label>
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Пароль</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>

    @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
}