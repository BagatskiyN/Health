@using Health.Domain.Entities
@using System.Web.Optimization
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Админ панель";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            Учетные записи докторов
        </div>
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Email</th>
                <th></th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">Нет ни одной учетной записи</td>
                </tr>
            }
            else
            {
                foreach (ApplicationUser user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            @using (Html.BeginForm("Delete", "AdminDoctors", new { id = user.Id }))
                            {
                                @Html.ActionLink("Изменить", "EditDoctor", new { id = user.Id },
                                    new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 10px" })
                                <button class="btn btn-danger btn-xs" type="submit">Удалить</button>
                            }
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    @Html.ActionLink("Создать", "CreateDoctor", null, new { @class = "btn btn-primary" })
    </body>