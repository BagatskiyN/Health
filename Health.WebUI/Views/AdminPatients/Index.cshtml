@using Health.Domain.Entities
@using System.Web.Optimization
@model IEnumerable<ApplicationUser>

@{ ViewBag.Title = "ASP.NET Identity";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<head>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<h2>Patient accounts</h2>


<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
<tr>
    <td colspan="4" class="text-center">No accounts</td>
</tr> }
            else
            {
                foreach (ApplicationUser user in Model)
                {
<tr>
    <td>@user.Id</td>
    <td>@user.UserName</td>
    <td>@user.Email</td>
    <td>
        @using (Html.BeginForm("Delete", "AdminPatients", new { id = user.Id }))
        {
@Html.ActionLink("Изменить", "EditPatient", new { id = user.Id },
         new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 10px" })
                        <button class="btn btn-danger btn-xs" type="submit">Delete</button>}
    </td>
</tr>                }
            }
</table>
    </div>
</body>