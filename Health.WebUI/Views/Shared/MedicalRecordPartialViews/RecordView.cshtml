@using Health.WebUI.Models.PatientModels;
@model  List<PatientAppointment>


@foreach (var m in Model)
{
    <div class="block_history_element_green block_theme_gradient">

        <div class="block_history_element_white default_shadow" onclick="GetAppointmentData(@m.Appointment.AppointmentId)">
            <div class="block_text_aboutdoctor history_element_DoctorName">
                <div class="text_grayStyle">Доктор:</div>
                <div class="text_blackStyle">@m.Doctor.Name @m.Doctor.Surname  @m.Doctor.Patronymic</div>
            </div>

            <div class="block_doctor_dopInfo">
                <div class="block_text_aboutdoctor">
                    <div class="text_grayStyle">Дата:</div>
                    <div class="text_blackStyle"> @Convert.ToDateTime(@m.Appointment.AppointmentDateTime).ToString("dd MMM yyyy") </div>
                </div>
                <div class="block_text_aboutdoctor">
                    <div class="text_grayStyle">Время:</div>
                    <div class="text_blackStyle">@Convert.ToDateTime(@m.Appointment.AppointmentDateTime).ToString("hh:mm ") </div>
                </div>
                <div class="block_text_aboutdoctor">
                    <div class="text_grayStyle">Кабинет:</div>
                    <div class="text_blackStyle">@m.Appointment.AppointmentPlace</div>
                </div>
            </div>
        </div>
    </div>
}
