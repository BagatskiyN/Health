@using Health.WebUI.Models.PatientModels

@model PatientAppointment
    <div class="block_userHistory_element_green block_theme_gradient">
        @if (Model.Specialization.SpecializationImageData != null)
        {
            <div class="pull-left" style="margin-right: 10px">
                <img class="block_userHistory_Icon" width="75" height="75"
                     src="@Url.Action("GetSpacializationImage", "Patient",
                new { Model.Specialization.SpecializationId})" />
            </div>
        }
        <div class="block_userHistory_element_white default_shadow">
            <div class="block_userHistory_textBlock">
                <div class="text_userHistory_title">
                    @Model.Doctor.Specialization.SpecializationTitle
                </div>
                <div class="block_text_aboutdoctor history_element_DoctorName">
                    <div class="text_grayStyle">Доктор:</div>
                    <div class="text_blackStyle"> @Model.Doctor.DoctorSurname @Model.Doctor.DoctorName @Model.Doctor.DoctorPatronymic </div>
                </div>
                <div class="block_doctor_dopInfo">

                    <div class="block_text_aboutdoctor">
                        <div class="text_grayStyle">Дата:</div>
                        <div class="text_blackStyle">@Convert.ToDateTime(@Model.Appointment.AppointmentDateTime).ToString("dd MMM yyyy") </div>
                    </div>
                    <div class="block_text_aboutdoctor">
                        <div class="text_grayStyle">Время:</div>
                        <div class="text_blackStyle">@Convert.ToDateTime(@Model.Appointment.AppointmentDateTime).ToString("hh:mm tt")  </div>
                    </div>
                    <div class="block_text_aboutdoctor">
                        <div class="text_grayStyle">Кабинет:</div>
                        <div class="text_blackStyle">@Model.Appointment.AppointmentPlace</div>
                    </div>
                </div>
            </div>
            <input type="submit" class="block_userHistory_arrowIcon" value="">


        </div>
    </div>